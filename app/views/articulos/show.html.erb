<section id="contenedor">
<%= render 'layouts/header' %><br>
<section id="texto">
<h1><%= @articulo.titulo %></h1>
<% if @articulo.image.attached? %>
    <%= image_tag @articulo.image, style: "width: 200px" %>
<% end%>
<p><%= @articulo.body %></p>
<p>
  Publicado el <%= @articulo.created_at.strftime("%d/%m/%Y, %l:%M%P") %>
</p>
<%= link_to "Volver", '/articulos', class: 'btn btn-default btn-lg btn-block' %><br>
</section>
<footer>
		<p> Escuela de Artes y oficios Carmen cabriles copyright 2020. Todos los derechos reservados.
</p>
</footer>
</section>
