<section id="contenedor">
<section id="cartelera">
<section id="texto">
<h1>Publicaciones</h1>
<p><%= paginate @articulos %></p>
<% if user_signed_in? %>
<%= link_to "Nuevo Articulo", '/articulos/new', class: 'btn btn-default btn-lg btn-block' %>
<% end %>
</section><br>

<div class="articulos">
<% @articulos.each do |articulo| %>
	<div class="articulo">
		<div class="thumbnail">
			<div class="caption">
	        <h3><%= link_to truncate(articulo.titulo, length:20), articulo_path(articulo) %></h3>
	        <p><% if articulo.image.attached? %>
    			<%= image_tag articulo.image, style: "width: 200px; display: run-in" %>
			<% end%>
			<p><%= truncate(articulo.body,length: 30) %></p>
			</p>
			<p>
  Publicado el <%= articulo.created_at.strftime("%d/%m/%Y, %l:%M%P") %>
</p>
			<% if user_signed_in? %>
  				<%= link_to "Editar", edit_articulo_path(articulo), class: 'btn btn-default'  %>
  				<%= link_to "Borrar", articulo_path(articulo), class: 'btn btn-default', method: :delete, data: { confirm: "seguro?" } %>
  				<% end %>
	        </div>
	    </div>
	</div>
  <% end %>
  
</div>
<section id="texto">
<p><%= paginate @articulos %></p>
</section><br>

</div>

</div>
</section>
		
<footer>
		<p> Escuela de Artes y oficios Carmen cabriles copyright 2020. Todos los derechos reservados.
</p>
</footer>
</section>
</section>

